{
  "name": "joaoroyosilva/php-tributos",
  "description": "Lib para cálculo de tributos brasileiros",
  "type": "library",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "PhpTributos\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "PhpTributos\\Tests\\": "tests/"
    }
  },
  "authors": [
    {
      "name": "João Gabriel",
      "email": "joao.royosilva@gmail.com"
    }
  ],
  "require": {
    "ext-dom": "*",
    "ext-mbstring": "*",
    "ext-xml": "*",
    "ext-xmlwriter": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "pestphp/pest": "^1.23",
    "squizlabs/php_codesniffer": "3.*"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "scripts": {
    "fix": [
      "@phpcbf",
      "@phpcs"
    ],
    "test": "vendor/bin/pest",
    "phpcs": "vendor/bin/phpcs src/",
    "phpcbf": "vendor/bin/phpcbf src/"
  }
}
